pipeline {
    agent any
    environment {
        JENKINS_DIRECTORY = 'jenkins-resources/calculator'
    }

    stages {
        stage('Compile') {
            steps {
                dir("${JENKINS_DIRECTORY}") {
                    sh '''
                        chmod +x gradlew
                        ./gradlew compileJava
                    '''
                }
            }
        }

        stage('Unit Tests') {
            steps {
                dir("${JENKINS_DIRECTORY}") {
                    sh '''
                        ./gradlew test
                    '''
                }
            }
        }
    }
}